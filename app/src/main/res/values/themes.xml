<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/lighter_blueish_black</item>
    </style>
    <!--    CARD VIEW-->
    <!--    TEXT-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textColor">@color/text_black_transparent</item>
    </style>

    <style name="Text.Description">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Header.Big">
        <item name="android:textSize">42sp</item>
    </style>

    <!--    BUTTON-->

    <!--    EDIT TEXT-->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_outline_edittext</item>
    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp" />
</resources>